<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F8F1B2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/poetImage"
        android:layout_width="@dimen/_90mdp"
        android:layout_height="@dimen/_100mdp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rahatround"
        app:civ_border_color="#E35F35"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toTopOf="@+id/Poem2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PoetName" />

    <TextView
        android:id="@+id/PoetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="Rahat Indori"
        android:textColor="#E1453A"
        android:textSize="@dimen/_20font_mdp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/poetImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Poem2"
        android:layout_width="@dimen/_130mdp"
        android:layout_height="@dimen/_16font_mdp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Toofano sa vaar saro"
        android:textColor="#FF9800"
        android:textSize="@dimen/_11font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poetImage" />

    <TextView
        android:id="@+id/Poem4"
        android:layout_width="@dimen/_130mdp"
        android:layout_height="@dimen/_17font_mdp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Saelabbo se Aasma karo"
        android:textColor="#FF9800"
        android:textSize="@dimen/_11font_mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Poem2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Poem2"
        app:layout_constraintTop_toBottomOf="@+id/Poem2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Read full..."
        android:textColor="#F6430B"
        android:textSize="@dimen/_12font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Poem4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>